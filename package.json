{
  "name": "PPoker",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "preinstall": "npm run build",
    "start": "node server.js",
    "dev": "npm run start & npm run watch",
    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css & npm run build-js",
    "watch-js": "watchify main.js -t browserify-css -o public/bundle.js -dv",
    "watch-css": "catw -c 'lessc --clean-css -' 'styles/*.less' -o public/staance-widget-styles.min.css",
    "build-js": "NODE_ENV=production browserify -t browserify-css main.js | uglifyjs -cm > public/bundle.js",
    "build-css": "lessc --clean-css styles/index.less staance-widget-styles.min.css"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "catw": "^1.0.1",
    "classnames": "^2.2.3",
    "ecstatic": "^1.3.1",
    "express": "^4.13.4",
    "less": "^2.5.3",
    "less-plugin-clean-css": "^1.5.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "socket.io": "^1.4.5",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "devDependencies": {
    "browserify-css": "^0.8.4"
  }
}
